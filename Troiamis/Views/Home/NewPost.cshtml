@using Troiamis.ModelsCombined
@model Post

@{
    ViewData["Title"] = "NewPost";
}


<form method="post" style="width: 45%;">

    <div class="form-group col-md-6">
        <label asp-for="postTitle" for="titleID">Title:</label>
        <input asp-for="postTitle" type="text" id="titleID" />
        <span asp-validation-for="postTitle"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="postContent" for="contentID">Content:</label>
        <input asp-for="postContent" type="text" id="contentID" />
        <span asp-validation-for="postContent"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


