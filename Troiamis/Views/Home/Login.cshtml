@using Troiamis
@using Troiamis.Models
@model User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div id="loginContainer">
    <form style="width: 50%;">
        <div class="form-group">
            <label @*asp-for="userEmail"*@>Email address</label>
            <input @*asp-for="userEmail"*@ type="email" class="form-control" id="" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label @*asp-for="password"*@>Password</label>
            <input @*asp-for="password"*@ type="password" class="form-control" id="">
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
